<%layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-4 offset-4 mt-3 loginconatiner">
        <h1 style="font-size: 2rem;">Login in wanterlust</h1>
        <form method="post" action="/listing/user/login" class="needs-validation" novalidate>

            <div class="mb-3 ">
            <label for="username" class="form-label">Username:</label>
            <input type="text" name="username" id="username"
                class="form-control" required>
                <div class="valid-feedback">
                    good work
                </div>
                <div class="invalid-feedback">
                    Please provide username
                 </div>
        </div>

        <div class="mb-3 ">
            <label for="Password" class="form-label">password:</label>
            <input type="text" name="password" id="password"
                class="form-control" required>
                <div class="valid-feedback">
                    good work
                </div>
                <div class="invalid-feedback">
                    Please mention the password
                 </div>
        </div>
                
        <button class="btn btn-success form-control mb-3">Singup</button>
        </form>
         <div class="forgot-password d-flex" style="justify-content: center; cursor: pointer;">
            <a href="/listing/user/forgotrequest" style="color: black; text-decoration: none;">Forgot password</a>
        </div>
    </div>
</div>

<script>
    const conatiner=document.querySelector('.loginconatiner');
    window.addEventListener('DOMContentLoaded',()=>{
        if(window.innerWidth<=990){
            conatiner.classList.remove('offset-4','col-4');
            conatiner.classList.add('col-12');
        }
    })
</script>